@model Data.Models.PageContentTypeModel
@{
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
    ViewBag.Title = "Edit content type";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Content type: @Model.Name</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Content("~/Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Content("~/PageContentType")">Page content type</a></li>
                        <li class="breadcrumb-item active">Edit content type</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm("Edit", "PageContentType", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "Error updating content type, Check your info!", new { @class = "text-danger" });
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="card mb-3">
                                            <div class="card-header">
                                                <i class="fa"></i><b>Edit content type.</b>
                                            </div>
                                            <div class="card-body">
                                                <div class="row mb-2">
                                                    <div class="col-md-4">
                                                        <b>@Html.LabelFor(m => m.Name, new { @class = "form-control" })</b>
                                                    </div>
                                                    <div class="col-md-8">
                                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control ", autocomplete = "off" })
                                                        @Html.ValidationMessageFor(u => u.Name, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                

                                                <input class="btn btn-primary" type="submit" value="Save" />
                                                @Html.ActionLink("Cancel", "Index","PageContentType", new { }, new { @class = "btn btn-secondary" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
          highlightmenu("#apagecontenttypes");        
    </script>
}
