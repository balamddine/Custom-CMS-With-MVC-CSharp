@model List<Data.Models.NewsletterSubscriptionModel>
@{
    ViewBag.Title = "Newsletter Subscription";
}
@{
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Newsletter Subscription</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Content("~/Home/Index")">Home</a></li>
                            <li class="breadcrumb-item active">Newsletter Subscription</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="container-fluid">
                @if (TempData["Success"] != null)
                {
                    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                }
                <div class="card">

                    <div class="card-header">
                        <h3 class="card-title">Page Filters</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @using (Html.BeginForm("Index", "NewsletterSubscription", FormMethod.Get))
                    {
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Search by email</label>
                                        <input type="text" name="search" value="@ViewBag.search" class="form-control" placeholder="Email" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Filter</button>  
                            <a title="Export" style="float:right;margin-left:10px" href="@Url.Content("~/NewsletterSubscription/Index?export=1&search="+ViewBag.search)" class="btn btn-success">
                                <i class="fa fa-file-excel" aria-hidden="true"></i>&nbsp;Export
                            </a>
                        </div>
                    }
                </div>
                <section class="content">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Newsletter Subscription</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            @{
                                WebGrid grid = new WebGrid(rowsPerPage: ViewBag.rowsPerPage, canSort: false);
                                grid.Bind(Model, autoSortAndPage: false, rowCount: ViewBag.rowCount);
                                @grid.GetHtml(tableStyle: "table table-striped", footerStyle: "table-pager",
mode: WebGridPagerModes.All,
firstText: "<< First",
previousText: "< Prev",
nextText: "Next >",
lastText: "Last >>",
columns: grid.Columns(
grid.Column(columnName: "Email", header: "Email"),
grid.Column(header: "Created Date", format: (item) => item.CreatedDate != new DateTime(1900, 1, 1) ? new HtmlString("<span>" + item.CreatedDate.ToString("dd/MM/yyyy") + "</span>") : new HtmlString("-")),
grid.Column(header: "Ip Address", format: (item) => !string.IsNullOrWhiteSpace(item.IpAddress) ? new HtmlString("<span>" + item.IpAddress + "</span>") : new HtmlString("-")),
grid.Column(header: "Actions", format: (item) => new HtmlString(
"<a  title='Delete record' class='modalLink btn btn-danger  btn-sm' data-id='" + item.Id + "' data-target='#deleteRow' data-toggle='modal' href='javascript:;'><i class='fa fa-trash ' aria-hidden='true'></i></a>"))
));
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteRow" tabindex="-1" role="dialog" aria-labelledby="deleteRowLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteRowLabel">Ready to Delete?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    Select "Delete" below if you are sure you want to delete this record.
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a href="@Url.Action("Delete", "NewsletterSubscription", new { })" class="btn btn-primary deleteSlider">Delete</a>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts
{
    <script type="text/javascript">

        highlightmenu("#anewslettersubscription");
        $(document).on("click", ".modalLink", function () {
            var passedID = $(this).data('id');
            $(".modal-footer .deleteSlider").attr("href", "@Url.Content("~/NewsletterSubscription/Delete/")" + passedID )
        });

    </script>
}