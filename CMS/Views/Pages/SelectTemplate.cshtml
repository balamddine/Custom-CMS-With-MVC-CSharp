@model Data.Models.PageModel
@{
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
    ViewBag.Title = "Add new page";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Select template</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Content("~/Home")">Home</a></li>
                        <li class="breadcrumb-item active">Add new page</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-12">
                @*<div class="card">*@
                @*<div class="card-body">*@
                @using (Html.BeginForm("SelectTemplate", "Pages", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Error creating content type, Check your info!", new { @class = "text-danger" });
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-md-4">
                                                <b><label class="form-control">Page Type</label></b>
                                            </div>
                                            <div class="col-md-8">
                                                <select name="PageType" class="form-control" onchange="pageTypeChange(this)" id="ddpageType">
                                                    <option value="1">Template with Content</option>
                                                    <option value="2">Only content</option>
                                                    <option value="0">Empty Template</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row mb-2" id="dvtemplatewithContent">
                                            <div class="col-md-4">
                                                <b>@Html.LabelFor(m => m.PageTemplateID, new { @class = "form-control" })</b>
                                            </div>
                                            <div class="col-md-8">
                                                <select name="PageTemplateID" id="ddTemplate" class="form-control">
                                                    @{
                                                        foreach (var item in ViewBag.Templatesdd)
                                                        {
                                                            <option data-content-id="@item.ContentTypeId" value="@item.id">@item.Name</option>
                                                        }
                                                    }
                                                </select>

                                            </div>
                                        </div>
                                        <div class="row mb-2" id="dvContentTypes" style="display:none">
                                            <div class="col-md-4">
                                                <b><label class="form-control">Content type</label></b>
                                            </div>
                                            <div class="col-md-8">
                                                <select name="PageContentID" id="ddPageContentID" class="form-control">
                                                    @{
                                                        foreach (var item in ViewBag.PageContentID)
                                                        {
                                                            <option value="@item.id">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <a href="javascript:;" onclick="redirectto();" class="btn btn-primary">Continue</a>
                                        &nbsp;
                                        <a href="javascript:;" onclick="cancel();" class="btn btn-secondary">Cancel</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @*</div>
                    </div>*@
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
         var parentpageid = "@ViewBag.pageid";
        setTimeout(function () {
            highlightTreemenu("#apage" + parentpageid);
        }, 500);

        function cancel() {
            window.location.href = "@Url.Content("~/Pages/index/")" + parentpageid;
        }

        function redirectto() {
            var tid = $("#dvtemplatewithContent").is(":visible") ? $("#ddTemplate").val() : 0;
            var cid = $("#dvContentTypes").is(":visible") ? $("#ddPageContentID").val() : $("#ddTemplate option:selected").attr("data-content-id");
            window.location.href = "@Url.Content("~/Pages/Create")" + "?parentpageid=" + parentpageid + "&templateid=" + tid + "&contentid=" + cid;
        }

        function pageTypeChange(sender) {
            var vle = $(sender).val();
            $("#dvtemplatewithContent").hide();
            $("#dvContentTypes").hide();

            if (vle == 1) {
                $("#dvtemplatewithContent").show();
            }
            else if (vle == 2) {
                 $("#dvContentTypes").show();
            }
            //else {

            //}
        }
    </script>
}
