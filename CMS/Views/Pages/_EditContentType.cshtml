@model Data.Models.PageModel
@{
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
    ViewBag.Title = "Edit page content type";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Edit content type: @Model.Name</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Content("~/Home")">Home</a></li>
                        <li class="breadcrumb-item active">Edit content type</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-12">
                @*<div class="card">*@
                @*<div class="card-body">*@
                @using (Html.BeginForm("_EditContentType", "Pages", FormMethod.Post, new { @class = "form-horizontal", role = "form",@id="frm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Error creating content type, Check your info!", new { @class = "text-danger" });
                    @Html.HiddenFor(x=>x.Id)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row mb-2" id="dvContentTypes">
                                            <div class="col-md-4">
                                                <b><label class="form-control">Content type</label></b>
                                            </div>
                                            <div class="col-md-8">
                                                <select name="PageContentID" class="form-control">
                                                    @{
                                                        foreach (var item in ViewBag.PageContentID)
                                                        {
                                                            string select = item.id == Model.PageContentID ? "selected" : "";
                                                            <option @select value="@item.id">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <a href="javascript:;" onclick="submit();" class="btn btn-primary">Submit</a>
                                        &nbsp;
                                        <a href="@Url.Content("~/Pages/Index/"+Model.Id)" class="btn btn-secondary">Cancel</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @*</div>
                    </div>*@
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
         var pageid = "@ViewBag.pageid";
        setTimeout(function () {

            highlightTreemenu("#apage" + pageid);
        }, 500);
        
        function submit() {
            $("#frm").submit();
        }
    </script>
}
