@{
    ViewBag.Title = "Clear website cache";
}
<style type="text/css">
    .card-text ul {
        padding: 0;
        list-style-type: none;
        color: green;
    }
</style>
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Clear website cache</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h6>Click the button below to clear the website cache</h6>
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <input class="btn btn-primary" type="submit" value="Clear cache" />
                                @Html.ValidationSummary(true, null, new { @class = "card-text" });
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        highlightmenu("#aclearcache");
    </script>
}